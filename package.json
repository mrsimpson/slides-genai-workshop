{
  "name": "genai-sw-workshop",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "slidev build",
    "build-both": "slidev build slides.md speaker-notes.md && npm run setup-routing",
    "setup-routing": "cp -r dist/slides/* dist/ && mkdir -p dist/speaker && cp -r dist/speaker-notes/* dist/speaker/",
    "dev": "slidev --open",
    "dev-presenter": "slidev --open speaker-notes.md",
    "export": "slidev export",
    "export-pdf": "slidev export --format pdf",
    "export-png": "slidev export --format png",
    "export-pptx": "slidev export --format pptx"
  },
  "dependencies": {
    "@slidev/cli": "^0.48.0",
    "@slidev/theme-default": "latest",
    "playwright-chromium": "^1.40.0"
  }
}
